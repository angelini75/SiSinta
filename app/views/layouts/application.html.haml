    = javascript_include_tag 'application'

    = csrf_meta_tags

    = favicon_link_tag image_path('favicon.png'), type: 'image/png'
    = favicon_link_tag image_path('favicon144.png'), type: 'image/png', rel: 'apple-touch-icon'
  %body.celeste
    #cabecera= render 'layouts/cabecera'
    #arbol_de_contenidos.barra= render 'layouts/barra'
    .container
      #principal.span-24
        = yield
