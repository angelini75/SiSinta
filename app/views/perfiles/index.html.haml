#lista
  .botonera
    - if can? :create, Perfil
      = link_to "Nuevo perfil", new_perfil_path

    #paginacion
      = paginate @perfiles
      = elegir_filas 'perfiles'

  %table
    %thead
      %tr
        %th#fecha=      link_para_ordenar :fecha,     'Fecha'
        %th#nombre=     link_para_ordenar :nombre,    'Nombre'
        %th#ubicacion=  link_para_ordenar :ubicacion, 'Ubicación'
        %th#numero=     link_para_ordenar :numero,    'Número'
        %th#modal=      link_para_ordenar :modal,     '¿Es modal?'
        %th.acciones

    %tbody
      = render @perfiles

  = volver_arriba
